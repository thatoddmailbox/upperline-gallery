<link rel="stylesheet" href="css/projects.css" />

<div class="center-text">
		<a href="/" ><img height="120" src="//static1.squarespace.com/static/567458eda128e6372f9c1656/t/568d23a5bfe87399730d04b5/1466015926308/?format=1500w" alt="Upperline School of Code"></a>
	<br>
	<p class="lead">Manage Projects</p>
</div>

<h3>Unapproved projects</h3>
<ul>
	<% unapproved.each do |project| %>
		<li>
			ID: <%= h project.id %><br/>
			Name: <%= h project.name %><br/>
			Authors: <%= h project.authors %><br/>
			Description: <%= h project.description %><br/>
			URL: <a href="<%= URI.encode project.url %>"><%= h project.url %></a><br/>
			<% if project.github_repo %>
				GitHub repository: <a href="<%= URI.encode project.github_repo %>"><%= h project.github_repo %></a><br/>
			<% end %>
			Owner: <%= h project.owner %><br/>
			<a href="/approve?id=<%= project.id %>" class="btn btn-primary btn-sm">Approve</a>
		</li>
	<% end %>
	<% if unapproved.length == 0 %>
		<em>No projects to approve.</em>
	<% end %>
</ul>
