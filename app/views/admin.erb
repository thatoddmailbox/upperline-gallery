<h1>Manage projects</h1>
<h3>Unapproved projects</h3>
<ul>
	<% unapproved.each do |project| %>
		<li>
			ID: <%= h project.id %><br/>
			Name: <%= h project.name %><br/>
			Authors: <%= h project.authors %><br/>
			Description: <%= h project.description %><br/>
			URL: <a href="<%= URI.encode project.url %>"><%= h project.url %></a><br/>
			Owner: <%= h project.owner %><br/>
			<a href="/approve?id=<%= project.id %>" class="btn btn-primary btn-sm">Approve</a>
		</li>
	<% end %>
	<% if unapproved.length == 0 %>
		<em>No projects to approve.</em>
	<% end %>
</ul>
