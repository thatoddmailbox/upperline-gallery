<link rel="stylesheet" href="css/projects.css" />

<div class="alert alert-warning" role="alert">
	<strong>Warning!</strong>
	Editing your project will require it to be reapproved before it is available on the home page.
</div>

<div class = "edit-form">
	<form action="/edit" method="POST">
		<input type="hidden" name="id" value="<%= h params[:id] %>" />
		<br>
		<p class = "form-label">Project name:</p>
		<input type="text" name="name" placeholder="Project name" class="form-control" value="<%= h project.name %>" />
		<br>
		<p class = "form-label">Creators:</p>
		<input type="text" name="authors" placeholder="Project authors" class="form-control" value="<%= h project.authors %>" />
		<br>
		<p class = "form-label">URL:</p>
		<input type="url" name="url" placeholder="Project URL (include the http://!)" class="form-control" value="<%= h project.url %>"  />
		<br>
		<p class = "form-label">GitHub repository:</p>
		<input type="url" name="ghrepo" placeholder="GitHub repository URL" class="form-control" value="<%= h project.github_repo %>"  />
		<br>
		<p class = "form-label">Description:</p>
		<textarea name="description" placeholder="Project description" class="form-control"><%= h project.description %></textarea>
		<br>
		<input type="submit" class="btn btn-primary btn-lg url_button form_button" value="Update project" />
	</form>
	<a style= "margin-top: 5px" href="/delete?id=<%= project.id %>" class="btn btn-default btn-lg delete-button form_button">Delete project</a>

</div>
