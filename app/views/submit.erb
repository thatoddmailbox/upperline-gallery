<link rel="stylesheet" href="css/projects.css" />
<div class="nav">
	<p class="lead pageheader">Submit New Project</p>
	<div class="header-links-right">
		<ul>
			<% if not session[:logged_in] %>
				<li><a class="footer-url" target="_parent" href="<%= get_github_url(@CLIENT_ID, @CLIENT_SECRET) %>">Sign in with GitHub</a></li>
			<% else %>
			<div id="git-avatar">
				<li><img style="width:75px; height:75px;" src="<%= URI.encode session[:avatar_url] %>" class="avatar-tiny"/>
				<span id="hidden-username"> Logged in as <br><strong><%=h session[:username]%></strong> </span></li>
			</div>
			<div id="function-stack">
				<li><a class="footer-url" href="/submit"><span style="font-size: 33px;" class="glyphicon glyphicon-plus"></span></a></li>
					<% if session[:is_admin] %>
				<li><a class="footer-url" href="/admin">Admin</a></li>
					<% end %>
				<li><a class="footer-url" href="/logout">Log out</a></li>
					<% end %>
			</div>
		</ul>
	</div>
</div>

<div class = "edit-form">
	<form action="/submit" method="POST">

		<p class = "form-label">Project name:</p>
		<input type="text" name="name" placeholder="Project name" class="form-control" />
		<br>
		<p class = "form-label">Creators:</p>
		<input type="text" name="authors" placeholder="Project creators" class="form-control" />
		<br>
		<p class = "form-label">URL:</p>
		<input type="url" name="url" placeholder="Project URL (include the http://!)" class="form-control" />
		<br>
		<p class = "form-label">GitHub repository:</p>
		<input type="url" name="ghrepo" placeholder="GitHub repository" class="form-control" />
		<br>
		<p class = "form-label">Description:</p>
		<textarea name="description" placeholder="Project description" class="form-control"></textarea>
		<br>
		<input type="submit" class="btn btn-primary btn-lg url_button form_button" value="Submit project" />
	</form>
	<a href="/" style = "margin-top:5px"class="btn btn-primary btn-lg url_button form_button"/>Back to gallery</a>
</div>
