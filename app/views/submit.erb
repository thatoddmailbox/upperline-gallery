<form action="/submit" method="POST">
	<input type="text" name="name" placeholder="Project name" class="form-control" />
	<input type="text" name="authors" placeholder="Project authors" class="form-control" />
	<input type="url" name="url" placeholder="Project URL (include the http://!)" class="form-control" />
	<textarea name="description" placeholder="Project description" class="form-control"></textarea>
	<input type="submit" class="btn btn-primary btn-lg" value="Submit project" />
</form>
